<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../templates/global.ejs') %>
    <title>View Detailed Results - Admin Panel</title>
    <style>
        #score-table-body > tr:nth-child(even) {
            background-color:#f6f6f6;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

</head>
<body class="px-32 pt-28 min-h-screen bg-gray-200">
    <%- include('../templates/header.ejs') %>
    <% data = data_obj.data %>

    <h1 class="text-2xl"><%= quiz_title %> - Results</h1>
    <section class="p-8 bg-white rounded-md w-full mx-auto mt-8 min-h-screen overflow-auto text-xs">
        <% if (data.length!=0) {

            %>
        <a href="#" onclick="download_table_as_csv('results_table');" class="float-right text-blue-600 mb-2 mr-4"><i class="fas fa-download"></i> <span class="underline hover:no-underline ">Download as CSV</span></a>
        <table class='w-full text-left mx-auto' id='results_table'>
            <thead class="bg-iec-blue text-white w-full">
                <tr class="w-full">
                    <th class="py-3 px-6">Student Name</th>
                    <th class="py-3 px-6">Student Email</th>
                    <th class="py-3 px-6">Student CNIC</th>
                    <% const quiz_sections = data_obj.quiz_sections
                        quiz_sections.forEach(section=>{%>
                            <th class="py-3 px-6"><%=section.section_title%> Student Score<br>(out of <%= section.maximum_score %>)</th>
                            <th class="py-3 px-6">Percentage Marks in <%=section.section_title%></th>
                            <th class="py-3 px-6"><%=section.section_title%> Time Taken<br><%= section.maximum_time %></th>
                            <th class="py-3 px-6"><%=section.section_title%> Submission Time (KHI)</th>
                        <%})
                    %>
                    <th class="py-3 px-6">Total Score<br>(out of <%=data_obj.quiz_total_score%>)</th>
                    <th class="py-3 px-6">Percentage Total Score</th>
                </tr>
            </thead>
            <tbody class="w-full" id='score-table-body'>
                <% data.forEach((student_row) => 
                {
                %>
                <tr>
                    <td class="py-3 px-6"><%=student_row.student_name%></td>
                    <td class="py-3 px-6"><%=student_row.student_email%></td>
                    <td class="py-3 px-6"><%=student_row.student_cnic%></td>
                        <%student_row.sections.forEach(section=>{
                            if (section.status == "Attempted") {
                            %>
                                <td class="py-3 px-6"><%=section.section_score%></td>
                                <td class="py-3 px-6"><%=section.percentage_score%>%</td>
                                <td class="py-3 px-6"><%=millisecondsToMinutesAndSeconds(section.duration)%></td>
                                <td class="py-3 px-6 endtime"><%= section.end_time %></td>
                            <%
                            } else {%>
                                <td class="py-3 px-6">Not Attempted Yet</td>
                                <td class="py-3 px-6">0</td>
                                <td class="py-3 px-6">N/A</td>
                                <td class="py-3 px-6 endtime">0</td>
                            <%}
                        })
                    %>
                    <td class="py-3 px-6"><%= student_row.total_score %></td>
                    <td class="py-3 px-6"><%= student_row.percentage_total %>%</td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <%} else {%>
            <p>No results found.</p>    
        <%} %>
    </section>

    <script src="/js/view_results.js"></script>
</body>
</html>